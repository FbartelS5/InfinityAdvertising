<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Advertizer_InvoicedAccount</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(InvoicedAccount__c ,&quot;Annonceur&quot;) ,
ISBLANK( AdvertiserContact__c )
)</errorConditionFormula>
    <errorDisplayField>AdvertiserContact__c</errorDisplayField>
    <errorMessage>Veillez renseigner le Contact annonceur</errorMessage>
</ValidationRule>
