<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Agency_InvoicedAccount</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(InvoicedAccount__c ,&quot;Agence&quot;) ,
ISBLANK( AgencyContact__c )
)</errorConditionFormula>
    <errorDisplayField>AgencyContact__c</errorDisplayField>
    <errorMessage>Veillez renseigner le Contact agence</errorMessage>
</ValidationRule>
